<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<!--        fx:controller="com.example.lodgify.RestaurantManagement.Menu"-->

<AnchorPane prefHeight="700.0" prefWidth="1400.0" style="-fx-background-image: #D6D6D6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Title Section -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #003366;">
        <ImageView fitHeight="77.0" fitWidth="82.0">
            <image>
                <Image url="@../WhatsApp%20Image%202024-11-29%20at%2021.29.35_a992ea51.jpg" />
            </image></ImageView>
        <Label prefHeight="75.0" prefWidth="1316.0" style="-fx-font-size: 36px; -fx-font-family: Times New Roman; -fx-text-fill: #D3BA6D;" text="LODGIFY" textFill="#d3ba6d">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font></Label>
    </HBox>



    <!-- Main Menu Section -->
    <GridPane alignment="CENTER" hgap="30" layoutX="0" layoutY="150" prefWidth="1400.0" vgap="20">
        <!-- Add New Item Button -->
        <Button fx:id="addMenuButton" onAction="#handleAddMenu" prefHeight="80" prefWidth="350" style="-fx-font-size: 20px; -fx-background-color: #D6D6D6; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333;" text="Add New Item" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <!-- Update Item Button -->
        <Button fx:id="updateMenuButton" onAction="#handleUpdateMenu" prefHeight="80" prefWidth="350.0" style="-fx-font-size: 20px; -fx-background-color: #D6D6D6; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333;" text="Update Item" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- Delete Item Button -->
        <Button fx:id="deleteMenuButton" onAction="#handleDeleteMenu" prefHeight="80" prefWidth="350" style="-fx-font-size: 20px; -fx-background-color: #D6D6D6; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333;" text="Delete Item" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <!-- View Menu Button -->
        <Button fx:id="viewMenuButton" onAction="#handleViewMenu" prefHeight="80" prefWidth="350" style="-fx-font-size: 20px; -fx-background-color: #D6D6D6; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-text-fill: #333333;" text="View Menu" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- Exit Button -->
    <Button fx:id="exitButton" layoutX="596.0" layoutY="446.0" onAction="#handleExit" prefHeight="66.0" prefWidth="226.0" style="-fx-font-size: 20px; -fx-background-color: #D72638; -fx-text-fill: black; -fx-border-radius: 10; -fx-background-radius: 10;" text="Exit" />
</AnchorPane>
