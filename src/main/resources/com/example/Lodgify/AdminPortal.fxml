<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Outer colored pane with margins from edges -->
        <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F5F5F5;" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <!-- Logo and Title Section -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #003366;">
                <ImageView fitHeight="83.0" fitWidth="91.0">
                    <image>
                        <Image url="@WhatsApp%20Image%202024-11-29%20at%2021.29.35_a992ea51.jpg" />
                    </image></ImageView>
                <Label prefHeight="81.0" prefWidth="1402.0" style="-fx-font-size: 36px; -fx-font-family: Times New Roman; -fx-text-fill: #D3BA6D;" text="LODGIFY" textFill="#d3ba6d">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font></Label>
            </HBox>

            <!-- Buttons Section -->
            <VBox alignment="CENTER" layoutX="550.0" layoutY="164.0" prefHeight="300.0" prefWidth="300.0" spacing="25.0">
                <!-- Button 1 (Employees) -->
                <Button fx:id="employeesButton" onAction="#employee" prefHeight="60.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-background-color: #D6D6D6; -fx-font-weight: bold;" text="Employees" />
                <!-- Button 2 (Cars) -->
                <Button fx:id="carsButton" onAction="#cars" prefHeight="60.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #D6D6D6;" text="Cars" />
                <!-- Button 3 (Rooms) -->
                <Button fx:id="roomsButton" onAction="#rooms" prefHeight="60.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #D6D6D6;" text="Rooms" />
                <!-- Exit Button -->
                <Button fx:id="exit" mnemonicParsing="false" onAction="#exitToDashboard" prefHeight="54.0" prefWidth="250.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #D6D6D6;" text="Exit" />
            </VBox>
        </AnchorPane>
    </children>
</StackPane>
